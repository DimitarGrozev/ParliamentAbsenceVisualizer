<Project Sdk="Microsoft.NET.Sdk.Web">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <Nullable>enable</Nullable>
    <ImplicitUsings>enable</ImplicitUsings>
    <SpaRoot>..\frontend\</SpaRoot>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Swashbuckle.AspNetCore" Version="10.0.1" />
  </ItemGroup>

  <ItemGroup>
    <Folder Include="wwwroot\" />
  </ItemGroup>

  <!-- Ensure frontend is built before backend -->
  <Target Name="BuildFrontend" BeforeTargets="Build">
    <Message Text="Building React frontend..." Importance="high" />

    <!-- Check if node_modules exists -->
    <Exec Command="npm ci" WorkingDirectory="$(SpaRoot)" Condition="!Exists('$(SpaRoot)node_modules')" />

    <!-- Build frontend (outputs to wwwroot) -->
    <Exec Command="npm run build" WorkingDirectory="$(SpaRoot)" />
  </Target>

  <!-- wwwroot is automatically included by Microsoft.NET.Sdk.Web -->
  <!-- No need to explicitly include it - just ensure it's built by the BuildFrontend target -->

</Project>
